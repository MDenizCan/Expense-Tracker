@{
    ViewData["Title"] = "Create / Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
    <a asp-controller="Home" asp-action="Index" class="btn btn-seconday">Home</a>
</div>

<form>
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id"/>
    <label>Value</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value"/>
    <label>Description</label>
    <input class="form-control" type="text" asp-for="Description" />
    <label>Category</label>
    <input class="form-control" type="text" asp-for="Category" />
    <label>Status</label>
    <input class="form-control" type="text" asp-for="Status" />
    <label>Date</label>
    <input class="form-control" type="date" placeholder="date" asp-for="Date" />
    <a class="btn btn-primary">Add</a>
</form>